#include "main.h"
/**
*print_sign - Write a function that prints the sign of a number.
*@n: number
*
*Return: 1 if greater than 0, 0 if 0, -1 if less than 0.
*/
int print_sign(int n)
{
if (n > 0)
{
return (1);
_putchar(43);
}
else if (n == 0)
{
return (0);
_putchar(48);
}
else
{
return (-1);
_putchar(45);
}
return (0);
}
